<h1><%= @restaurant.name %></h1>
<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
</ul>
<h2>Reviews</h2>
<h4><%= link_to "Add review", new_restaurant_review_path(@restaurant) %></h4>
<ul>
  <% @reviews.each do |review| %>
     <li><%= review.rating %> - <%= review.content %> - <%= link_to 'Delete', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this review?' }  %></li>
  <% end %>
</ul>

<h4><%= link_to "Back to list", restaurants_path %></h4>
